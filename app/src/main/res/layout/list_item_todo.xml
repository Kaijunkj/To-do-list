<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/todo_recycler_view"
    >

    <CheckBox
        android:id="@+id/list_item_todo_checked_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/list_item_todo_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_todo_title_text_view"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/list_item_todo_checked_box"
        android:padding="4dp"
        android:textSize="14sp"
        tools:text="Date"/>

    <TextView
        android:id="@+id/list_item_todo_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/list_item_todo_checked_box"
        android:padding="4dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Title"/>

</RelativeLayout>